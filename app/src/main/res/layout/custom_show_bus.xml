<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@color/icon_bg"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_bus_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_bus_login_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/txt_bus_name"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_bus_starting_point"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_bus_end_point"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_bus_description"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_bus_seat"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_bus_route"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_bus_date"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_bus_time"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_book"
        android:text="BOOK"
        android:backgroundTint="@color/icon_dark_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>